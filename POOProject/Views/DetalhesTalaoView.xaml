<Window x:Class="POOProject.Views.DetalhesTalaoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Talão"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F2F3F5">

    <Grid>
        <Border Padding="20"
                Margin="20"
                Background="White"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cabeçalho -->
                <Border Grid.Row="0"
                        BorderBrush="#009688"
                        BorderThickness="0,0,0,2"
                        Padding="0,0,0,10"
                        Margin="0,0,0,15">

                    <StackPanel>
                        <TextBlock Text="{Binding TituloTalao}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Text="{Binding InfoData}"
                                   FontSize="12"
                                   Foreground="#888"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Info Cliente / Funcionário -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <TextBlock Text="{Binding InfoCliente}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333"/>

                    <TextBlock Text="{Binding InfoFuncionario}"
                               FontSize="12"
                               Foreground="#666"/>
                </StackPanel>

                <!-- Tabela -->
                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding ItensParaMostrar}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          Background="White"
                          BorderBrush="#DDD"
                          RowHeight="30"
                          ColumnHeaderHeight="32">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Artigo"
                                            Binding="{Binding Descricao}"
                                            Width="150"
                                            FontWeight="Bold"/>

                        <DataGridTextColumn Header="Serviços"
                                            Binding="{Binding ListaServicos}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Botão Fechar -->
                <Button Grid.Row="3"
                        Content="Fechar"
                        Command="{Binding FecharCommand}"
                        Height="38"
                        Width="160"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Background="#009688"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Window>
