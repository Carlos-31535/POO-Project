<Window x:Class="POOProject.Views.CreateFuncionarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Funcionário"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F2F3F5">

    <Grid>
        <Border Width="340"
                Padding="25"
                Background="White"
                CornerRadius="8"
                BorderBrush="#DDD"
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>

                <TextBlock Text="Adicionar Funcionário"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Nome"
                           Foreground="#555"
                           Margin="0,0,0,5"/>

                <TextBox Text="{Binding FirstName}"
                         Height="35"
                         Padding="10"
                         Margin="0,0,0,15"
                         Background="#F9F9F9"
                         BorderBrush="#CCC"/>

                <TextBlock Text="Apelido"
                           Foreground="#555"
                           Margin="0,0,0,5"/>

                <TextBox Text="{Binding LastName}"
                         Height="35"
                         Padding="10"
                         Margin="0,0,0,25"
                         Background="#F9F9F9"
                         BorderBrush="#CCC"/>

                <Button Content="Guardar"
                        Command="{Binding SaveCommand}"
                        Height="40"
                        Background="#009688"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
